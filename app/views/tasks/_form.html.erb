<%= form_with(model: [@category, @task]) do |form| %>
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
        <% @task.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :notes %>
    <%= form.text_area :notes %>
  </div>

  <div class="field">
    <%= form.label :date %>
    <%= form.date_select :date %>
  </div>

  <div class="field">
    <%= form.label :completed %>
    <%= form.check_box :completed %>
  </div>

  <div class="field">
    <%= form.label :category_id %>
    <%= form.text_field :category_id%>
  </div>

  <div class="field">
    <%= form.select :category_id, current_user.categories.pluck(:title,:id), selected: "#{@task.category ? @task.category.id : @current_user.categories.first.title}" %>
  </div>
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
