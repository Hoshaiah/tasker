<p id="notice"><%= notice %></p>

<h1>Tasks</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Notes</th>
      <th>Date</th>
      <th>Completed</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.notes %></td>
        <td><%= task.date %></td>
        <td><%= task.completed %></td>
        <td><%= task.category_id %></td>
        <td><%= link_to 'Show', category_task_path(task.category,task) %></td>
        <td><%= link_to 'Edit', edit_category_task_path(task.category, task) %></td>
        <td><%= link_to 'Destroy', category_task_path(task.category, task), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Task', new_category_task_path%>
