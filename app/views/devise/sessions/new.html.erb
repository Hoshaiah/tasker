<h1 class="font-bold text-xl mb-4 text-blue-500" >Log in</h1>


<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="mb-6">
    <%= f.label :email , class: "font-bold"%><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="mb-6">
    <%= f.label :password, class: "font-bold" %><br />
    <%= f.password_field :password, autocomplete: "current-password" %>
  </div>

 <%# <% if devise_mapping.rememberable? %>
  <%#   <div class="field">
  <%#     <%= f.check_box :remember_me %>
  <%#     <%= f.label :remember_me %>
   <%#  </div>
  <% end %>

  <div class = "flex justify-center items-center text-white font-bold mt-8 bg-blue-700 hover:bg-blue-200 hover:text-black p-4 rounded-md w-32 h-10">
    <%= f.submit "Log in" %>
  </div>
<% end %>

<%= link_to "Sign up ", "/users/sign_up" , class: "flex justify-center items-center text-white mt-4 bg-green-700 hover:bg-green-200 hover:text-black p-4 rounded-md w-32 h-10" %>
