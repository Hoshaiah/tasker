<p id="notice"><%= notice %></p>

<div class="flex justify-between items-center ml-8 mt-8">
  <h1 class="text-xl font-bold">Categories</h1>
    <%= link_to new_category_path do %>
      <h1 class="font-bold text-2xl items-center mr-8 hover:text-blue-400"> + </h1>
    <% end %>
</div>

<div class="flex flex-wrap ml-8">
    <% @categories.each do |category| %>
        <div class="w-40 h-40 border-4 rounded-md flex flex-col m-6 text-white hover:text-black category-<%= category.color %>">
            <%= link_to category_tasks_path(category.id) do %>
              <div class="flex justify-center items-center text-black hover:text-gray-500 w-full h-32 font-bold pt-6 "><%= category.title %></div>
            <% end %>
            <div class="bg-transparent w-full h-full flex items-end justify-end text-xs">
              <h2 class="text-inherit w-fit h-fit ml-1 mr-1 hover:text-gray-500"><%= link_to 'Edit', edit_category_path(category) %></h2>
              <h2 class="text-inherit w-fit h-fit ml-1 mr-1 hover:text-gray-500"><%= link_to 'Delete', category, method: :delete, data: { confirm: 'Are you sure?' } %></h2>
            </div>
        </div>
    <% end %>
    <% if @categories.empty? %>
      <h1 class="ml-10 mt-6 font-bold"> *No categories yet </h1>
    <% end %>
</div>
<br>

